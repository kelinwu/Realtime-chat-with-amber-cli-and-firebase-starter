<form>
    <div class="form-group">
        <label>Title</label>
        {{input type="text" class="form-control" value="model.title"}}
    </div>
    <div class="form-group">
        <label>DateTitle</label>
        {{input type="date" class="form-control" value="model.date"}}
    </div>
    <div class="form-group">
        <label>Message</label>
        {{textarea class="form-control" value="model.message"}}
    </div>
    <button {{action 'editMessage' model.id}} class="btn btn-primary">Edit</button>
    </form>
